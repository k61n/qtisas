echo ... building yaml library ...
cd $2

file="../../lib/$1/libyaml-cpp.a"

if [ -f "$file" ]
then
        echo "... library already exists: $file"
        exit 1
fi

rm -fr build
mkdir build

cd build

if [[ $1 == *"10.1"* ]]
then
    cmake -D CMAKE_CXX_FLAGS="-arch x86_64 -Xarch_x86_64 -mmacosx-version-min=10.8" ..
else
    cmake ..
fi

make

cd ..
mkdir -p ../../lib/$1/
cp ./build/libyaml-cpp.a ../../lib/$1
rm -fr build
